<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doyun.mylifelogger.TabFragments.statisticsTapFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="하루통계"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_day" />
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:text="한주통계"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_week" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_week_view"
            android:visibility="gone" />

        <Button
            android:text="한달통계"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_month" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_month_view"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
